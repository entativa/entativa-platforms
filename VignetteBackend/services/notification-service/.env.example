# Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8089

# Database (PostgreSQL)
DB_URL=jdbc:postgresql://localhost:5432/vignette_notifications
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Firebase Cloud Messaging (FCM)
FCM_ENABLED=true
FCM_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Apple Push Notifications (APN)
APN_ENABLED=true
APN_KEY_ID=YOUR_KEY_ID
APN_TEAM_ID=YOUR_TEAM_ID
APN_BUNDLE_ID=com.entativa.vignette

# Email (SMTP)
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@vignette.com
SMTP_PASSWORD=your-password
EMAIL_FROM=Vignette <notifications@vignette.com>

# Kafka
KAFKA_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=notification-events

# Notification Settings
NOTIFICATION_GROUPING_WINDOW_MINUTES=5
NOTIFICATION_EXPIRY_DAYS=30
