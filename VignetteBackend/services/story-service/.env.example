# Application
APP_NAME=Vignette Story Service
APP_VERSION=1.0.0
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8085

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=vignette_stories

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_TTL=3600

# Story Settings
STORY_EXPIRY_HOURS=24
MAX_STORIES_PER_USER=100
MAX_STORY_DURATION=15
MAX_HIGHLIGHT_STORIES=100

# Media Service (gRPC)
MEDIA_SERVICE_HOST=localhost
MEDIA_SERVICE_PORT=50051

# Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_STORIES_PER_DAY=50
RATE_LIMIT_VIEWS_PER_MINUTE=100

# Feature Flags
ENABLE_CLOSE_FRIENDS=True
ENABLE_STORY_REPLIES=True
ENABLE_INTERACTIVE_STICKERS=True
ENABLE_STORY_INSIGHTS=True
