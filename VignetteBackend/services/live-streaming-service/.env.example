# Vignette Live Streaming Service Configuration

# Service
PORT=8097
GIN_MODE=release

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vignette_streaming?sslmode=disable

# Redis (for real-time features)
REDIS_URL=redis://localhost:6379/0

# Kafka (for events)
KAFKA_BROKERS=localhost:9092

# Media Service (gRPC)
MEDIA_SERVICE_GRPC_URL=localhost:50051

# Streaming Configuration
# Follower threshold to go live
MIN_FOLLOWERS_TO_STREAM=100

# RTMP Server
RTMP_SERVER_URL=rtmp://stream.vignette.com/live

# CDN URLs
CDN_HLS_BASE_URL=https://stream.vignette.com/hls
CDN_WEBRTC_BASE_URL=wss://stream.vignette.com/webrtc

# Recording
ENABLE_RECORDING=true
RECORDING_PATH=/var/recordings
