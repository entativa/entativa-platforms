# Server
HOST=0.0.0.0
PORT=8091
RUST_LOG=info

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vignette_messaging

# Redis
REDIS_URL=redis://localhost:6379

# Encryption (for reference)
# Server CANNOT decrypt messages!
# All encryption happens client-side with:
# - Signal Protocol (X3DH + Double Ratchet) for 1:1
# - MLS (Messaging Layer Security) for groups

# Performance
MAX_DB_CONNECTIONS=20
REDIS_POOL_SIZE=10

# Features
ENABLE_SELF_DESTRUCT=true
MAX_GROUP_SIZE=1500
OFFLINE_QUEUE_TTL_DAYS=30

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_CLIENT_TIMEOUT=60
