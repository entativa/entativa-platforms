# Entativa User Service Environment Configuration

# Server Configuration
PORT=8001
ENV=development
SERVICE_NAME=entativa-user-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=entativa_users
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5

# JWT Configuration
JWT_SECRET=change-this-to-a-long-random-secret-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=24h
JWT_REFRESH_TOKEN_EXPIRY=720h

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@entativa.com
FROM_NAME=Entativa

# Cross-Platform Integration
VIGNETTE_API_URL=http://localhost:8002/api/v1
ENTATIVA_API_URL=http://localhost:8001/api/v1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:19000,http://localhost:19001
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# Security
BCRYPT_COST=12
PASSWORD_MIN_LENGTH=8
PASSWORD_RESET_TOKEN_EXPIRY=1h
SESSION_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Redis (optional, for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9001

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_CROSS_PLATFORM_SSO=true
ENABLE_BIOMETRIC_AUTH=true
